<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import view.pipeGame.BoardDisplayer?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import view.pipeGame.BoardDisplayer?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="view.pipeGame.PipeGameController"
          minWidth="0"
          minHeight="0">
        <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints maxHeight="50.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <StackPane  fx:id="stackPane"
                    minWidth="0"
                    minHeight="0">
                <BoardDisplayer fx:id="boardDisplayer"/>
        </StackPane>
        <HBox alignment="CENTER"
              GridPane.rowIndex="1"
              spacing="10"
              opacity="0.9"
              GridPane.halignment="CENTER"
              maxHeight="-Infinity"
              maxWidth="-Infinity"
              prefHeight="200.0"
              prefWidth="350.0"
              scaleShape="false"
              styleClass="vbox">
                <GridPane.margin>
                        <Insets top="10" right="10" left="10" bottom="10"/>
                </GridPane.margin>
                <Text fx:id="stopWatch"
                      styleClass="stopwatch-text"/>
                <Button mnemonicParsing="false"
                        styleClass="main-button"
                        text="Solve"
                        onAction="#solveHandle" />
                <Button mnemonicParsing="false"
                        styleClass="main-button"
                        text="Done"
                        onAction="#doneHandle" />
                <Label text="Counter: "/>
                <Text fx:id="stepsCounter" styleClass="text-field"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>

</GridPane>
